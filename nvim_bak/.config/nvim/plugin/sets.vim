syntax on

set scrolloff=8
set noerrorbells
set autoindent
set tabstop=2 softtabstop=2
set shiftwidth=2
set expandtab
set smartindent
set guicursor=n-v-c:block
" set nohlsearch
set hls
set hidden
set number
set relativenumber
set nowrap
highlight ColorColumn ctermbg=0 guibg=lightgrey
set signcolumn=yes
set noswapfile
set nobackup
set undodir=~/.nvim/undodir
set undofile
set incsearch
set noshowmode

" More space for displaying messages
set cmdheight=2

" Performance improvement
set updatetime=50

" Don't pass messages to |ins-completion-menu|
set shortmess+=c
